        <ul class="white list pa0 ma0">
          <% if session[:email] %>
            <li class="link ml3 dib v-mid b"><a href="/logout" class="link white">Logout</a></li>
            <%= session[:email] %>
          <% else %>
            <li class="link ml3 dib v-mid b"><a href="/login" class="link white">Login</a></li>
          <% end %>
          <li class="link ml3 dib v-mid">
            <%= image_tag(@gravatar, class: "br-100 w3 h3") %>
          </li>
        </ul>
      </div>

      <div class="w-100 mb3 flex f4 dark-gray" id="tabs">
        <a href="/" class="link gray pa3 bb b--light-silver hover-b--gray">Webhook Events</a>
        <a href="/setup" class="link gray pa3 bb b--light-silver hover-b--gray">Setup</a>

        <div class="flex-auto bb b--light-silver pa3 tr f5 items-center">
        </div>
      </div>

      <script>
        $(document).ready(function() {
          var path = window.location.pathname
          $('#tabs > a').each(function(_, a) {
            var tab = $(a)
            if (tab.attr('href') === path) {
              tab.addClass('purple b--purple')
            }
          })
        })
      </script>

      <%= yield %>
