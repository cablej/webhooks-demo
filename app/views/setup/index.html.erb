<div class="ph3 mt4">
  <div class="dt w-100 w-80-l mw9 center">
    <section class="mb6">
      <div class="f2 mb4 lh-title">Setting up the webhooks CLI plugin</div>
      <div class="code-block relative lh-copy mv3 w-100 bg-light-gray code pa2 pl5 dark-gray ba b--silver br1 word-wrap">heroku plugins:install heroku-webhooks</div>
    </section>
    <section class="mb6">
      <div class="f2 mb4 lh-title">Add a release webhook for $TRIGGER_APP</div>
      <div>
      <div class="code-block relative lh-copy mv3 w-100 bg-light-gray code pa2 pl5 dark-gray ba b--silver br1 word-wrap">heroku webhooks:add --include api:release --url <%= @webhooks %> -s <%= @webhook_secret %> -l sync -a $TRIGGER_APP</div>
    </section>

    </div>
  </div>
</div>
